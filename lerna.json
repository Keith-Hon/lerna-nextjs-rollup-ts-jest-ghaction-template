{
    "packages": ["packages/*", "applications/*"],
    "version": "independent",
    "useWorkspaces": true,
    "npmClient": "yarn",
    "command": {
        "publish": {
            "ignoreChanges": [
                "**/CHANGELOG.md",
                "**/node_modules/**",
                "**/package.json",
                "**/*.md",
                "**/*.spec.*",
                "**/*.stories.*"
            ]
        }
    }
}
